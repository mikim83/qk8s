{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {"name":"k8s-proxy"},
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-proxy",
        "image": "gcr.io/google_containers/hyperkube-amd64:${K8S_VERSION}",
        "command": [
                "/hyperkube",
                "proxy",
                "--master=http://${K8S_HOSTNAME}:8080",
                "--hostname-override=${K8S_HOSTNAME}",
                "--v=2",
                "--resource-container=\"\""
        ],
        "securityContext": {
          "privileged": true
        }
      }
    ]
  }
}
